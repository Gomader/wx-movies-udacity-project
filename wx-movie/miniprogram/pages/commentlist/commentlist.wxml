<view wx:if='{{comment}}'>
  <view wx:for='{{comment}}'>
    <view class='comment' data-id='{{item._id}}'>
      <view class="userinfo">
      <image src='{{item.avatar}}' class='avatarpc'></image>
      <text class="username">{{item.username}}</text>
    </view>
    <view wx:if='{{item.type==0}}' class="textcomment">
      <text>{{item.inner}}</text>
    </view>
      <view wx:if='{{item.type==1}}' class="recordcomment">
        <view bindtap="play" class="playtime" bindtap="play" data-inner='{{item.inner}}'><image src="/images/play.png" class="playicon"></image>{{item.time}}s</view>
      </view>
    </view>
  </view>
</view>
